<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Art | Megan Nelson</title>

    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Tera&family=Montserrat:wght@300;400;500;900&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">



    <!-- my stylesheet -->
    <link rel="stylesheet" href="../styles/art.css">

    <link rel="icon" href="./imgs/favicon.ico">

  </head>
  <body>

    <!-- NAVBAR -->

    <section class="navigation-section">

      <div class="container-fluid">
        <nav id="myNavbar" class="navbar navbar-expand-md navbar-dark">
          <a class="navbar-brand" href="/">M.N.</a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler01">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarToggler01">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">HOME</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/#about">ABOUT</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/#contact">CONTACT</a>
              </li>
            </ul>
          </div>
        </nav>
      </div>




    </section>



    <!-- ART SECTION -->

    <section class="art-section">
      <div class="container-fluid">
        <div class="grid">

          <div class="grid-item">

            <div id="header-title-container" class="piece-image-container">

              <h1>
                <div>
                  ART
                </div>
                <div>
                  WORK
                </div>
              </h1>

            </div>
          </div>

          <% pieces.forEach((piece) => { %>

            <div class="grid-item">
              <div class="piece-image-container">
                <img class="piece-image" src="./imgs/art/<%= piece.image %>" alt="<%= piece.image %>">
                <div class="piece-caption">
                  <%= piece.description %>
                </div>
              </div>
            </div>

          <% }); %>

        </div>
      </div>
    </section>

    <!-- MODAL CONTENT -->

    <div class="modal">

      <button class="close-modal btn btn-md btn-dark" type="button" name="button">&times;</button>

      <img class="modal-image" id="my-image" alt="image">

      <div class="modal-caption"></div>

    </div>

    <!-- FOOTER -->

    <section class="footer-section">

      <div class="container-fluid">

        <div class="row">
          <div class="footer-container col-lg-12">
            <p>&#169 Copyright Megan Nelson 2020</p>
          </div>
        </div>

      </div>

    </section>


    <!-- Bootstrap requirements: jQuery, popper, boots-->
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
          crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>


    <!-- Masonry.js -->
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>

    <!-- images loaded -->
    <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>

    <!-- my javascript -->
    <script src="../scripts/art.js" charset="utf-8"></script>


  </body>
</html>
