<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Art</title>

    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Tera&family=Montserrat:wght@300;400;500;900&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script>

    <!-- Masonry.js -->
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>

    <!-- images loaded -->
    <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>

    <!-- my stylesheet -->
    <link rel="stylesheet" href="../styles/art.css">

    <link rel="icon" href="./imgs/favicon.ico">

  </head>
  <body>

    <!-- HEADER -->

    <section class="header-section">

      <div class="container-fluid">

        <div class="row">
          <div class="col-lg-12">
            <h1>ARTWORK</h1>
            <hr>
          </div>
        </div>
      </div>

      <nav id="myNavbar" class="navbar navbar-expand navbar-dark">

        <div>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#about">2017</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#portfolio">2018</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/art">2019</a>
            </li>
          </ul>
        </div>
      </nav>

    </section>

    <!-- ART SECTION -->

    <section class="art-section">
      <div class="container-fluid">
        <div class="grid">

          <% pieces.forEach((piece) => { %>

            <div class="grid-item">
              <div class="piece-image">
                <img class="piece-im" src="./imgs/art/<%= piece.image %>" alt="<%= piece.image %>">
              </div>
            </div>

          <% }); %>

        </div>
      </div>
    </section>

    <!-- MODAL CONTENT -->

    <div class="modal">

      <button class="close-modal btn btn-md btn-dark" type="button" name="button">&times;</button>

      <img class="modal-image" id="my-image" alt="image">

      <div class="modal-caption"></div>

    </div>

    <!-- FOOTER -->

    <section class="footer-section">

      <div class="container-fluid">

        <div class="row">
          <div class="footer-container col-lg-12">
            <p>&#169 Copyright Megan Nelson 2020</p>
          </div>
        </div>

      </div>

    </section>


    <!-- my javascript -->
    <script src="../scripts/art.js" charset="utf-8"></script>

  </body>
</html>
